<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType = "centerCrop"
    tools:context="org.threeabn.apps.mysdainterless.MainActivity"
    android:background="@drawable/bluebase">

    <ImageView
        android:id="@+id/image_mysdatv_logo"
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:src="@drawable/mysdatv_logo"
        android:layout_marginBottom="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/text_interless"
        android:layout_width="949dp"
        android:layout_height="100dp"
        android:inputType="text"
        android:text="Interless"
        android:background="@null"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/image_mysdatv_logo"
        android:layout_marginTop="150dp"/>

    <ImageView
        android:id="@+id/image_search"
        android:layout_width="94dp"
        android:layout_height="117dp"
        app:srcCompat="@drawable/search"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:id="@+id/image_favorite"
        android:layout_width="94dp"
        android:layout_height="117dp"
        android:pointerIcon="text"
        app:srcCompat="@drawable/star"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/image_search"
        android:layout_marginLeft="62dp"
        android:layout_marginBottom="10dp"/>


    <ImageView
        android:id="@+id/image_list"
        android:layout_width="94dp"
        android:layout_height="117dp"
        android:pointerIcon="text"
        app:srcCompat="@drawable/list"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/image_threeadn"
        android:layout_marginRight="62dp"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:id="@+id/image_threeadn"
        android:layout_width="94dp"
        android:layout_height="117dp"
        android:pointerIcon="text"
        app:srcCompat="@drawable/threeabn"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"/>


</RelativeLayout>