<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.threeabn.apps.mysdainterless.screens.MainActivity"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerCrop"
    android:background="@drawable/backgroundscreen">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/iconMargin"
        >

        <ImageView
            android:id="@+id/image_search"
            style="@style/iconButton"
            android:background="@drawable/search_icon" />

        <ImageView
            android:id="@+id/image_favorite"
            style="@style/iconButton"
            android:background="@drawable/icon_favorites" />

        <ImageView
            android:id="@+id/image_list"
            style="@style/iconButton"
            android:background="@drawable/icon_program_list" />
    </LinearLayout>

</RelativeLayout>
</android.support.constraint.ConstraintLayout>