<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType = "centerCrop"
    tools:context="org.threeabn.apps.mysdainterless.screens.MainActivity"
    android:background="@drawable/backgroundscreen">

    <ImageView
        android:id="@+id/image_search"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/image_favorite"
        android:layout_marginStart="30dp"
        android:background="@drawable/search_icon" />

    <ImageView
        android:id="@+id/image_favorite"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:pointerIcon="text"
        android:background="@drawable/icon_favorites"
        android:layout_alignTop="@+id/image_list"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp" />


    <ImageView
        android:id="@+id/image_list"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:pointerIcon="text"
        android:background="@drawable/icon_program_list"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_alignParentEnd="true" />

</RelativeLayout>