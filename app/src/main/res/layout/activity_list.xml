<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerCrop"
    tools:context="org.threeabn.apps.mysdainterless.ProgramsListActivity"
    android:background="@drawable/backgroundscreen">

    <ListView
        android:id="@+id/list_programs_view"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="344dp"></ListView>

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/list_programs_view"
        android:layout_marginStart="621dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="36dp" />
</RelativeLayout>
