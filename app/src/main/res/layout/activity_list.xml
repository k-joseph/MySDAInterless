<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerCrop"
    tools:context="org.threeabn.apps.mysdainterless.screens.ProgramsListActivity"
    android:background="@drawable/playback_empty_screen">

    <ListView
        android:id="@+id/list_programs_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/programPreviewPlay"
        android:layout_marginTop="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="340dp"></ListView>

    <VideoView
        android:id="@+id/programPreview"
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="45dp"
        android:layout_marginEnd="17dp" />

    <ImageView
        android:id="@+id/programPreviewPlay"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/programPreview"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="33dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/icon_play" />

    <ImageView
        android:id="@+id/programPreviewFavorite"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/list_programs_view"
        android:layout_alignStart="@+id/programPreviewPlay"
        android:src="@drawable/icon_favorites" />

</RelativeLayout>
