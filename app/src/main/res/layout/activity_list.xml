<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerCrop"
    tools:context="org.threeabn.apps.mysdainterless.ProgramsListActivity"
    android:background="@drawable/backgroundscreen">

    <ListView
        android:id="@+id/list_programs_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:listSelector="@android:color/holo_orange_light"
        android:layout_marginEnd="344dp"></ListView>

    <VideoView
        android:id="@+id/programPreview"
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/programPreviewPlay"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/programPreview"
        android:layout_alignEnd="@+id/programPreview"
        android:layout_marginBottom="38dp"
        android:layout_marginEnd="40dp"
        android:src="@drawable/icon_play"/>

</RelativeLayout>
