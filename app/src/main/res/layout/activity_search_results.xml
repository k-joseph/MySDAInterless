<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluebase"
    tools:context="org.threeabn.apps.mysdainterless.screens.SearchResultsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/foundSearchResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_found_programs"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="24dp"/>
        <ListView
            android:id="@+id/search_programs_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
